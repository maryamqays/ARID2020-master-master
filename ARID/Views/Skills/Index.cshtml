@model ARID.Models.SkillViewModel
@{
    ViewData["Title"] = "Index";
}
<h2>Index</h2>
<p>
    <a asp-action="Create">Create New</a>
</p>
@using (Html.BeginForm("Delete", "Skills", FormMethod.Post))
{
    <table class="table-hover table table-striped table-bordered dt-responsive">
        <thead>
            <tr>
                <th>#</th>
                <th>
                    @Html.DisplayNameFor(model => model.Skill.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Skill.ApplicationUser)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Skill.SkillCategoryType)
                </th>
                <th>عدد الاعضاء</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Skills)
            {
            <tr>
                <td>
                    <input type="checkbox" class="checkboxes" value="@item.Id" name="ExamPolicyIDs" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ApplicationUser.ArName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SkillCategoryType)
                </td>
                <td>@Model.UserSkills.Where(a => a.SkillId == item.Id).Count()</td>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
    <input type="submit" value="Delete All" />
}