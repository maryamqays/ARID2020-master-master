@model ARID.Models.SubmissionFile
@{
    ViewData["Title"] = "معلومات الملف";
}
<h2>معلومات الملف</h2>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.FileName)
        </dt>
        <dd>
            <a target="_blank" href="@Url.Content("~/" + @ARID.Properties.Resources.ScientificEvent + "/" + Model.FileName)">
                @Html.DisplayFor(model => model.FileName)
            </a>
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.JournalFileTypeId)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.JournalFileType.FileType.FileName)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-primary bold" asp-action="Details" asp-controller="Manuscripts" asp-route-id="@Model.Submission.ManuscriptId">رجوع</a>
</div>
<style>
    label, h2, input[type='submit'], .bold {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        font-weight: bold;
    }
</style>
