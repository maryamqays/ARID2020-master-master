        });
        $("#ManuscriptSenttoAuthorforPayment").click(function () {
            $(".ManuscriptSenttoAuthorforPayment").toggle()
        });
        $("#GalleyProof").click(function () {
            $(".GalleyProof").toggle()
        });
        $("#Published").click(function () {
            $(".Published").toggle()
        });
        $("#Declined").click(function () {
            $(".Declined").toggle()
        });

    </script>
}
