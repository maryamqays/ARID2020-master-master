
@model ARID.Models.JournalViewModel
@{
    ViewData["Title"] = "البحث عن محكمين في";
}
<h2>البحث عن محكمين في @ViewData["jan"]</h2>
<div class="col-lg-12">
    <form asp-action="ReviewersSearch">
        <div class="form-group col-lg-12">
            <label class="control-label">البحث عن المحكم في منصة اريد</label>
            <input id="srch" minlength="5" placeholder="ادخل الكلمة المفتاحية ثم اضغط زر بحث --ادخل خمسة حروف على الاقل--" class="form-control col-lg-10" name="ss" />
            <span id="spanvalid"></span>
            <input type="hidden" name="id" value="@ViewData["jid"]" /><br />
            <input class="btn btn-success col-lg-2" type="submit" value="بحث" id="search" />
        </div>
    </form>
    <div class="col-lg-12">
        @if (Model.JournalReviewers!=null)
        {
            <table id="users" class="table-hover table table-striped table-bordered dt-responsive">
                <caption><h3>المحكمون المقترحون في المجلة</h3></caption>
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.ApplicationUser.ArName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ApplicationUser.EnName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ApplicationUser.CountryId)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ApplicationUser.UniversityId)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ApplicationUser.Email)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ApplicationUser.Faculty.SpecialityId)
                        </th>
                        <th>
                            المؤهلات الأكاديمية
                        </th>
                        @*<th>
                                @Html.DisplayNameFor(model => model.ApplicationUser.Id)
                            </th>*@
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.JournalReviewers)
                    {
                        <tr>
                            <td>
                                <a target="_blank" asp-controller="ApplicationUsers" asp-action="Details" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.ArName)</a>
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EnName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Country.ArCountryName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.University.ArUniversityName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Faculty.Speciality.Name)
                            </td>
                            @foreach(var i in Model.EducationalLevels.Where(e => e.ApplicationUserId == item.Id)) { 
                            <td>
                                @Html.DisplayFor(modelItem => i.AcademicDegree.ArDegreeName)
                            </td>
                            }
                            @*<td>
                                    @Html.DisplayFor(modelItem => item.Id)
                                </td>*@
                        </tr>
                    }
                </tbody>
            </table>
        }
