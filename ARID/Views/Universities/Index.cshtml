@model ARID.Models.StatisticsViewModel

@{
    ViewData["Title"] = "Index";
}

<h2>الجامعات</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.University.ArUniversityName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.University.EnUniversityName)
                </th>
               <th>Users</th>
               
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Universities) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ArUniversityName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EnUniversityName)
            </td>

            <td>@Model.ApplicationUsers.Where(a => a.UniversityId == item.Id).Count()</td>
          

            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |

                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
