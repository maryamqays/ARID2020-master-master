@model ARID.Models.FreelancerReadyServiceExtension

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">إضافة تطوير للخدمة</h2>

<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FreelancerReadyServiceId" class="control-label"></label>
                <select asp-for="FreelancerReadyServiceId" class="form-control" asp-items="ViewBag.FreelancerReadyServiceId"></select>
                <span asp-validation-for="FreelancerReadyServiceId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RequiredDays" class="control-label"></label>
                <select asp-for="RequiredDays" class="form-control" asp-items="@Html.GetEnumSelectList<RequiredDays>()"><option selected disabled>إختر عدد الأيام</option></select>
                <span asp-validation-for="RequiredDays" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PricingType" class="control-label"></label>
                <select asp-for="PricingType" asp-items="Html.GetEnumSelectList<PricingType>()" class="form-control"><option selected disabled>إختر السعر المناسب</option></select>
                <span asp-validation-for="PricingType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <h4 style="display:inline"><input type="submit" value="إضافة" class="btn btn-success" /></h4>
                <h4 style="display:inline;float:left"><a asp-action="Details" asp-controller="FreelancerReadyServices" asp-route-id="@ViewData["id"]" class="btn btn-info">رجوع</a></h4>
            </div>
        </form>
    </div>
</div>
@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
