                    <a target="_blank" href="@Model.Twitter">@Html.DisplayFor(model => model.Twitter)</a>
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.ContactUs)
                </dt>
                <dd>
                    @Html.Raw(Model.ContactUs)
                </dd>
                <dt>
