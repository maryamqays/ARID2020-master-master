                    @Html.DisplayFor(model => model.Email)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.EstablishmentDate)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.EstablishmentDate)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.EditorinChief)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.EditorinChief)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.IsIIndexed)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.IsIIndexed)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.IsScopusIndexed)
                </dt>
