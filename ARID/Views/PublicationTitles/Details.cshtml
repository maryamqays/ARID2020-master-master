{
    <center>
        <img class="img-rounded" src="@Url.Content("~/" + @ARID.Properties.Resources.ScientificEvent + "/" + Model.Logo)" />
    </center>
}

<h2 class="text-center">@Model.ArName</h2>
<hr />
<div class="row">
    <div class="col-lg-12">
        <div class="col-lg-8">
            <dl class="dl-horizontal h5">
                <dt>
                    @Html.DisplayNameFor(model => model.EnName)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.EnName)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.ArDescription)
                </dt>
                <dd>
                    @Html.Raw(Model.ArDescription)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.PISSN)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.PISSN)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.EISSN)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.EISSN)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Email)
                </dt>
