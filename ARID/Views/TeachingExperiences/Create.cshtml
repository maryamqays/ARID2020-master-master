@model ARID.Models.TeachingExperience
@using Microsoft.AspNetCore.Mvc.Localization
@using System.Globalization

@inject IViewLocalizer Localizer
﻿@{
    ViewData["Title"] = Localizer["Title"];
}

<h2>@Localizer["Create"]</h2>

<h4>@Localizer["Index"]</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ApplicationUserId" value="@ViewBag.ApplicationUserId" />

            <div class="form-group">
                <label asp-for="ArTitle" class="control-label"></label>
                <input asp-for="ArTitle" class="form-control" />
                <span asp-validation-for="ArTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ArDescription" class="control-label"></label>
                @Html.TextAreaFor(model => model.ArDescription, new { rows = 10, cols = 50, @class = "form-control", @maxlength = "500" })
                <span asp-validation-for="ArDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EnTitle" class="control-label"></label>
                <input asp-for="EnTitle" class="form-control" />
                <span asp-validation-for="EnTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EnDescription" class="control-label"></label>
                @Html.TextAreaFor(model => model.EnDescription, new { rows = 10, cols = 50, @class = "form-control", @maxlength = "500" })
                <span asp-validation-for="EnDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input id="chkStatus" asp-for="IsCurrent" /> @Html.DisplayNameFor(model => model.IsCurrent)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="FromYear" class="control-label"></label>
                <input asp-for="FromYear" class="form-control" />
                <span asp-validation-for="FromYear" class="text-danger"></span>
            </div>
            <div id="testdiv" class="form-group">
                <label asp-for="ToYear" class="control-label"></label>
                <input asp-for="ToYear" class="form-control" />
                <span asp-validation-for="ToYear" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Indx" class="control-label"></label>
                <input asp-for="Indx" value="@ViewData["Indx"]" class="form-control" />
                <span asp-validation-for="Indx" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="@Localizer["Create"]" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@Localizer["BackToList"]</a>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $("#date-2").click(function () {

            });
        });
    </script>

    <script type="text/javascript">
        $(function () {
            $('#chkStatus').change(function () {
                if ($('#chkStatus').is(':checked'))
                    $("#testdiv").fadeOut();
                else
                    $('#testdiv').fadeIn();
            });
        });
    </script>
}
