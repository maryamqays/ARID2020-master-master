@model ARID.Models.Country

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<form method="post" asp-action="Create" enctype="multipart/form-data">
    <div class="form-horizontal">
        <h4>Country</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="ArCountryName" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ArCountryName" class="form-control" />
                <span asp-validation-for="ArCountryName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="EnCountryName" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="EnCountryName" class="form-control" />
                <span asp-validation-for="EnCountryName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="CountryCode" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="CountryCode" class="form-control" />
                <span asp-validation-for="CountryCode" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ShortName" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ShortName" class="form-control" />
                <span asp-validation-for="ShortName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Flag" class="col-md-2 control-label"></label>
            <div class="col-md-10">                
                <input type="file" name="myfile" id="file" accept=".png,.jpg,.jpeg,.gif,.tif" class="btn btn-default" />
                <span asp-validation-for="Flag" class="text-danger"></span>
                <input asp-for="Flag" id="fileinput" class="form-control" />
            </div>            
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $("#file").change(function () {
                if ($("#file").val() != "") {
                    $("#fileinput").prop("value", $("#file").val().split('\\').pop());
                }
            });
        });
    </script>
}