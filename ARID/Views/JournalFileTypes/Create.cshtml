@model ARID.Models.JournalFileType

@{
    ViewData["Title"] = "Create";
}

<h2>إضافة ملف للمجلة</h2>

<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Create" asp-route-jid="@ViewData["jid"]">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="JournalId" class="control-label"></label>
                <select asp-for="JournalId" class ="form-control" asp-items="ViewBag.JournalId"></select>
            </div>
            <div class="form-group">
                <label asp-for="FileTypeId" class="control-label"></label>
                <select asp-for="FileTypeId" class ="form-control" asp-items="ViewBag.FileTypeId"><option disabled selected>إختر نوع الملف</option></select>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="IsRequired" /> @Html.DisplayNameFor(model => model.IsRequired)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="IsDeleted" /> @Html.DisplayNameFor(model => model.IsDeleted)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="إضافة" class="btn btn-success" />
                <a class="btn btn-primary bold" asp-action="Index" asp-route-id="@ViewData["jid"]">رجوع</a>
            </div>
        </form>
    </div>
</div>
<style>
    label, h2, input[type='submit'], .bold {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        font-weight: bold;
    }
</style>
