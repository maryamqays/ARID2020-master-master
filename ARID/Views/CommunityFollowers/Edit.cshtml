@model ARID.Models.CommunityFollower

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>CommunityFollower</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="CommunityId" class="control-label"></label>
                    <select asp-for="CommunityId" class="form-control" asp-items="ViewBag.CommunityId"></select>
                    <span asp-validation-for="CommunityId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ApplicationUserId" class="control-label"></label>
                    <input asp-for="ApplicationUserId" class="form-control" />
                    <span asp-validation-for="ApplicationUserId" class="text-danger"></span>
                </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="NotifyMe" /> @Html.DisplayNameFor(model => model.NotifyMe)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="IsAccepted" /> @Html.DisplayNameFor(model => model.IsAccepted)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="IsAdmin" /> @Html.DisplayNameFor(model => model.IsAdmin)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="حفظ" class="btn btn-success" />
                <a asp-action="Index" asp-route-id="@Model.CommunityId" class="btn btn-info">العودة الى قائمة متابعي المجتمع</a>
            </div>
        </form>
    </div>
</div>

