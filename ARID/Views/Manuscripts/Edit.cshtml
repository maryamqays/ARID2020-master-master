        <a id="author" asp-action="Create" asp-controller="ArticleAuthorships" asp-route-mid="@ViewData["mid"]" class="bold">إضافة مؤلفي البحث&nbsp;&nbsp;</a> <span id="author-t" class="glyphicon glyphicon-ok"></span>
