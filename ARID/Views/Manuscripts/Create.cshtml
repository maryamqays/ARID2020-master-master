@model ARID.Models.Manuscript
@{
    ViewData["Title"] = "إضافة معلومات البحث";
}
<h2>إضافة معلومات البحث</h2>
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="JournalArticleTypeId" class="control-label"></label>*
                <select asp-for="JournalArticleTypeId" class="form-control" asp-items="ViewBag.JournalArticleTypeId">
                    <option disabled selected>إختر نوع البحث</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="SpecialityId" class="control-label"></label>*
                <select asp-for="SpecialityId" class="form-control" asp-items="ViewBag.SpecialityId"><option disabled selected>إختر تخصص البحث</option></select>
            </div>
            <div class="form-group">
                <label asp-for="ArTitle" class="control-label"></label>*
                <input asp-for="ArTitle" class="form-control" />
                <span asp-validation-for="ArTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EnTitle" class="control-label"></label>*
                <input asp-for="EnTitle" class="form-control" />
                <span asp-validation-for="EnTitle" class="text-danger"></span>
            </div>
            @*<div class="form-group" hidden>
                <label asp-for="RunningTitle" class="control-label"></label>*
                <input asp-for="RunningTitle" value="لايوجد" class="form-control" />
                <span asp-validation-for="RunningTitle" class="text-danger"></span>
            </div>*@
            <div class="form-group">
                <label asp-for="ArAbstract" class="control-label"></label>*
                <textarea rows="10" asp-for="ArAbstract" class="form-control"></textarea>
                <span asp-validation-for="ArAbstract" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EnAbstract" class="control-label"></label>*
                <textarea rows="10" asp-for="EnAbstract" class="form-control"></textarea>
                <span asp-validation-for="EnAbstract" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Keywords" class="control-label"></label>*
                <input placeholder="ضع 5 كلمات وافصل بينهم بفارزة" asp-for="Keywords" class="form-control" />
                <span asp-validation-for="Keywords" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Areas" class="control-label"></label>*
                <input asp-for="Areas" class="form-control" />
                <span asp-validation-for="Areas" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SubmittedforIssueId" class="control-label"></label>*
                <select asp-for="SubmittedforIssueId" class="form-control" asp-items="ViewBag.SubmittedforIssueId"></select>
            </div>
            <div class="form-group" hidden>
                <label asp-for="JournalId" class="control-label"></label>
                <input asp-for="JournalId" class="form-control" value="@ViewData["jid"]" />
            </div>
            <div class="form-group">
                <label asp-for="FundingInfo" class="control-label"></label>
                <input asp-for="FundingInfo" class="form-control" />
                <span asp-validation-for="FundingInfo" class="text-danger"></span>
            </div>
            @*<label asp-for="GraphicalAbstract" class="control-label"></label>
                <div class="form-group" id="img">
                    <img id="img1" class="img-rounded" src="" />
                    <input type="file" name="myfile" id="file" accept=".png,.jpg,.jpeg,.gif,.tif" class="btn btn-primary col-lg-12" />
                    <span asp-validation-for="GraphicalAbstract" class="text-danger"></span>
                </div>*@
            <br />
            <br />
            <div class="form-group">
                <input type="submit" value="إضافة" class="btn btn-success" />
                <a asp-controller="Journals" asp-action="details" asp-route-id="@ViewData["jid"]" class="btn btn-primary bold pull-left">رجوع</a>
            </div>
        </form>
    </div>
    <div class="col-lg-1"></div>
    <div class="col-lg-3">
        <a class="btn btn-danger bold"><span class="glyphicon glyphicon-list"></span> إضافة معلومات عامة</a> <span class="glyphicon glyphicon-arrow-right"></span>
        <br /><h3 style="display:inline;" class="text-center"><span style="left:-85px" class="glyphicon glyphicon-chevron-down text-info"></span></h3><br>
        <a id="ma" class="btn btn-danger bold"><span class="glyphicon glyphicon-user"></span> إضافة مؤلفي البحث&nbsp;&nbsp;</a>
        <br /><h3 style="display:inline;" class="text-center"><span style="left:-85px" class="glyphicon glyphicon-chevron-down text-info"></span></h3><br>
        <p class="bold" style="font-size:14px; color:red" id="mat"><span class="glyphicon glyphicon-info-sign"></span> يجب ملأ المعلومات العامة اولاً</p>
        <a id="mr" class="btn btn-default bold"><span class="glyphicon glyphicon-zoom-in"></span> إضافة محكمي البحث</a>
        <br /><h3 style="display:inline;" class="text-center"><span style="left:-85px" class="glyphicon glyphicon-chevron-down text-info"></span></h3><br>
        <p class="bold" style="font-size:14px; color:red" id="mrt"><span class="glyphicon glyphicon-info-sign"></span> يجب ملأ المعلومات العامة اولاً</p>
        <a id="ms" class="btn btn-danger bold"><span class="glyphicon glyphicon-envelope"></span> رسالة لرئيس التحرير&nbsp;&nbsp;</a>
        <br /><h3 style="display:inline;" class="text-center"><span style="left:-85px" class="glyphicon glyphicon-chevron-down text-info"></span></h3><br>
        <p class="bold" style="font-size:14px; color:red" id="mst"><span class="glyphicon glyphicon-info-sign"></span> يجب ملأ المعلومات العامة اولاً</p>
        <a id="mf" class="btn btn-danger bold"><span class="glyphicon glyphicon-file"></span> &nbsp;&nbsp;إضافة ملفات البحث</a>
        <br /><h3 style="display:inline;" class="text-center"><span style="left:-85px" class="glyphicon glyphicon-chevron-down text-info"></span></h3><br>
        <p class="bold" style="font-size:14px; color:red" id="mft"><span class="glyphicon glyphicon-info-sign"></span> يجب ملأ المعلومات العامة اولاً</p>
        <hr />
        <a id="subm" class="btn btn-default bold"><span class="glyphicon glyphicon-check"></span> &nbsp;&nbsp;&nbsp;&nbsp;تسليم البحث نهائياً</a>
        <p id="submt" class="bold" style="font-size:14px; color:red"><span class="glyphicon glyphicon-info-sign"></span> لم تكمل جميع المتطلبات بعد</p>
    </div>

</div>
<style>
    label, h2, input[type='submit'], .bold {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        font-weight: bold;
    }
</style>
@section scripts{
    <script>
        $("#submt").hide();
        $("#mat").hide();
        $("#mrt").hide();
        $("#mst").hide();
        $("#mft").hide();
        $("#ma").click(function () {
            $("#mat").show();
            $("#mrt").hide();
            $("#mst").hide();
            $("#mft").hide();
            $("#submt").hide();
        });
        $("#mr").click(function () {
            $("#mrt").show();
            $("#mst").hide();
            $("#mft").hide();
            $("#mat").hide();
            $("#submt").hide();
        });
        $("#ms").click(function () {
            $("#mst").show();
            $("#mat").hide();
            $("#mrt").hide();
            $("#mft").hide();
            $("#submt").hide();
        });
        $("#mf").click(function () {
            $("#mft").show();
            $("#mat").hide();
            $("#mrt").hide();
            $("#mst").hide();
            $("#submt").hide();
        });
        $("#subm").click(function () {
            $("#submt").show();
            $("#mft").hide();
            $("#mat").hide();
            $("#mrt").hide();
            $("#mst").hide();
        });
    </script>
