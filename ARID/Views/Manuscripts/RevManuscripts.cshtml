@model IEnumerable<ARID.Models.SubmissionReviewer>
@{
    ViewData["Title"] = "البحوث المسندة";
}
<h2>البحوث المسندة لك كمحكم</h2>
<table class="table-hover table table-striped table-bordered dt-responsive">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Submission.Manuscript.ArTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Submission.Manuscript.EnTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Submission.Manuscript.RunningTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Submission.Manuscript.Areas)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Submission.Manuscript.CurrentStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Submission.Manuscript.FundingInfo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Submission.Manuscript.CorrespondingAuthorId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Submission.Manuscript.JournalId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Submission.Manuscript.JournalArticleTypeId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Submission.Manuscript.SpecialityId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Submission.Manuscript.SubmittedforIssueId)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a asp-controller="Manuscripts" asp-action="Details" asp-route-id="@item.Submission.ManuscriptId">     @Html.DisplayFor(modelItem => item.Submission.Manuscript.ArTitle)</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Submission.Manuscript.EnTitle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Submission.Manuscript.RunningTitle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Submission.Manuscript.Areas)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Submission.Manuscript.CurrentStatus)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Submission.Manuscript.FundingInfo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Submission.Manuscript.CorrespondingAuthor.ArName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Submission.Manuscript.Journal.ArName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Submission.Manuscript.JournalArticleType.ArticleType.Type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Submission.Manuscript.Speciality.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Submission.Manuscript.SubmittedforIssue.Name)
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-action="Home" asp-controller="Journals" asp-route-id="@ViewData["jshortname"]" class="btn btn-primary bold">رجوع</a>
<style>
    label, h2, input[type='submit'], .bold {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        font-weight: bold;
    }
</style>
