                @Html.DisplayNameFor(model => model.Manuscript.CorrespondingAuthor)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Manuscript.CorrespondingAuthor.ArName)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Manuscript.JournalId)
            </dt>
