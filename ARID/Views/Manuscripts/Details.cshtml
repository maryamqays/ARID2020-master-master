                                    @Html.DisplayNameFor(model => model.SubmissionReviewer.ReviewDate)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.SubmissionReviewer.DecisionDate)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.SubmissionReviewer.CieAeUserId)
                                </th>
