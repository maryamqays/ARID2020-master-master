@model IEnumerable<ARID.Models.JournalArticleType>
@{
    ViewData["Title"] = "Index";
}
<h2>مقالات </h2>
<p>
    <a class="btn btn-success bold" asp-action="Create" asp-route-id="@ViewData["jid"]">إضافة</a>
</p>
<table class="table-hover table table-striped table-bordered dt-responsive">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ArticleType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Journal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsDeleted)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ArticleType.Type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Journal.ArName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsDeleted)
                </td>
                <td>
                    <a title="تعديل" asp-action="Edit" asp-route-id="@item.Id" asp-route-jid="@ViewData["jid"]"><span class="glyphicon glyphicon-edit"></span></a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-action="Home"  asp-controller="Journals" class="btn btn-primary bold" asp-route-id="@ViewData["jsn"]">رجوع</a>
<style>

    label, h2, input[type='submit'], .bold {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        font-weight: bold;
    }
</style>