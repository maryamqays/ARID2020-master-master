@model ARID.Models.JournalArticleType

@{
    ViewData["Title"] = "Create";
}

<h2>إضافة مقالة الى المجلة</h2>

<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Create" asp-route-jid="@ViewData["jid"]">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="JournalId" class="control-label"></label>
                <select asp-for="JournalId" class ="form-control" asp-items="ViewBag.JournalId"></select>
            </div>
            <div class="form-group">
                <label asp-for="ArticleTypeId" class="control-label"></label>
                <select asp-for="ArticleTypeId" class ="form-control" asp-items="ViewBag.ArticleTypeId"><option selected disabled>إختر نوع المقالة</option></select>
            </div>
            <div class="form-group">
                <input type="submit" value="إضافة" class="btn btn-default" />
                <a class="btn btn-primary bold" asp-action="Index" asp-route-id="@ViewData["jid"]">رجوع</a>
            </div>
        </form>
    </div>
</div>

<style>
    label, h2, input[type='submit'], .bold {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        font-weight: bold;
    }
</style>