@model ARID.Models.UserSkill
@using Microsoft.AspNetCore.Mvc.Localization
@using System.Globalization

@inject IViewLocalizer Localizer
﻿@{
    ViewData["Title"] = Localizer["Title"];
}

<h2>@Localizer["Create"]</h2>

<h4>@Localizer["Index"]</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ApplicationUserId" value="@ViewBag.ApplicationUserId" />
            <div class="form-group">
                <label asp-for="SkillId" class="control-label"></label>
                <select asp-for="SkillId" class="form-control" asp-items="ViewBag.SkillId">
                    <option disabled selected value="">@Localizer["SelectSkill"]</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="@Localizer["Create"]" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@Localizer["BackToList"]</a>
</div>
