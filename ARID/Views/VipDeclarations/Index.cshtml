    }

    .blog-title {
        font-size: 2.5em;
        margin-top: 5px;
    }

    .date {
        font-size: 1em;
        font-weight: 400;
        color: #9C9C9C;
        margin-top: -10px;
        text-decoration: underline;
        text-decoration-color: currentColor;
    }
