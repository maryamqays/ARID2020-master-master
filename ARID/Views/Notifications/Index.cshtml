@model IEnumerable<ARID.Models.Notification>
@inject UserManager<ApplicationUser> UserManager
@{ ApplicationUser currentUser = await UserManager.GetUserAsync(User); }
@{
    ViewData["Title"] = "الإشعارات";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>جميع الإشعارات</h3>
<hr style="border:2px solid Activecaption" />
<div class="col-lg-12" style="background-color:whitesmoke;padding:10px">
    <div id="ssss">
        @foreach (var item in Model)
        {
            <div class="col-lg-12 rm" style="background-color:white;margin-top:10px;margin-bottom:10px;padding:10px">
                <div class="col-lg-12t">
                    <a target="_blank" href="@item.Url" class="h5">
                        <img style="position:relative" onerror="this.onerror=null;this.src='https://portal.arid.my/profileimages/default_small.png';" src="@Url.Content("~/" + ARID.Properties.Resources.ProfileImageFolder + "/" + item.Sender.ProfileImage)"
                             height="60" width="60" class="img-circle" />
                        @item.Content
                        <span class="pull-left h6">@Html.DisplayFor(modelitem => item.CreationDate)</span>
                    </a>
                    @if (currentUser.Id == item.ApplicationUserId && item.IsRead == true)
                    {
                        <br />
                        <h6 class="pull-left"><span title="@item.ReadDate" class=" text-success glyphicon glyphicon-ok"></span>تأريخ القراءة: @item.ReadDate </h6>
                    }
                </div>
            </div>
        }
    </div>

</div>

