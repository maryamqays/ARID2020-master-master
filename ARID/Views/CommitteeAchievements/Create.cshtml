@model ARID.Models.CommitteeAchievement

@{
    ViewData["Title"] = "Create";
}

<h2>إضافة انجاز</h2>

<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div hidden class="form-group">
                <label asp-for="CommitteeProfileId" class="control-label"></label>
                <select asp-for="CommitteeProfileId" class ="form-control" asp-items="ViewBag.CommitteeProfileId"></select>
            </div>
            <div class="form-group">
                <label asp-for="DateOfRecord" class="control-label"></label>
                <input asp-for="DateOfRecord" class="form-control" />
                <span asp-validation-for="DateOfRecord" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AchievementType" class="control-label"></label>
                <select asp-for="AchievementType" asp-items="Html.GetEnumSelectList<AchievementType>()" class="form-control"></select>
                <span asp-validation-for="AchievementType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                @Html.TextAreaFor(model => model.Description, new { rows = 10, @class = "form-control", @maxlength = "500" })
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="إنشاء" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-primary">رجوع</a>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
