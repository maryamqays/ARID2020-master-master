@model ARID.Models.CourseChapter

@{
    ViewData["Title"] = "إضافة قسم";
}

<h3 class="text-center">أقسام الدورة</h3>

<hr />
<div class="row">
    <div class="col-md-8">
        <h3 class="text-center">إضافة قسم</h3>
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Indx" class="control-label"></label>
                <input asp-for="Indx" class="form-control" />
                <span asp-validation-for="Indx" class="text-danger"></span>
            </div>
            <div hidden class="form-group">
                <label asp-for="CourseId" class="control-label"></label>
                <select asp-for="CourseId" class="form-control" asp-items="ViewBag.CourseId"></select>
            </div>
            @if (User.IsInRole("Admins"))
            {<div class="label-danger">
                    خاص بالادمن
                    <div class="form-group">
                        <div class="checkbox">
                            <label>
                                <input asp-for="Ishidden" /> @Html.DisplayNameFor(model => model.Ishidden)
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="checkbox">
                            <label>
                                <input asp-for="IsDeleted" /> @Html.DisplayNameFor(model => model.IsDeleted)
                            </label>
                        </div>
                    </div>
                </div>
            }

            <div class="form-group">
                <input type="submit" value="إضافة" class="btn-sm btn-success h5" />
                <a asp-action="Details" asp-controller="Courses" asp-route-id="@ViewData["coid"]" class="btn-sm btn-info pull-left h5">رجوع</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
